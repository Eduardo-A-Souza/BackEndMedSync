generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produto {
    id          String    @id @default(auto()) @map("_id") @db.ObjectId
    nome        String    @unique
    descricao   String   
    codigo      String    @unique
    quantidade  Int

    // Relacionamentos
    entradas Entrada[]
    saidas   Saida[]
}

model Saida {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  motivo  String?
  data    DateTime @default(now())

  // Fk para o produto
  produtoId String @db.ObjectId
  produto Produto @relation(fields: [produtoId], references: [id])
}

model Entrada {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  motivo  String?
  data    DateTime @default(now())

  // Fk para o produto
  produtoId String @db.ObjectId
  produto Produto @relation(fields: [produtoId], references: [id])
}